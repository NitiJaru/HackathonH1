@model HackathonHoliday.Models.DisplayChoiceInformation

@{
    ViewBag.Title = "Choice Detail";
}

<a href="@Url.Action("PollDetail","Home",new { pollid = Model.PollRefId })" class="btn btn-default" style="min-width: 100px; margin-bottom: 4em">
    <span class="glyphicon glyphicon-chevron-left"></span>
    Back
</a>

<div class="row">
    <div class="col-md-11 col-md-offset-1">
        <div class="panel panel-default" style="background-color: lightgrey; border-radius: 1em 1em;">
            <div class="panel-body">
                <div class="text-left col-md-6">
                    <p style="font-size: 30px">@Model.PollName</p>
                </div>
                <div class="text-right col-md-6">
                    <p>@string.Format("{0:dd.MM.yy}", Model.PollCreateDate)<br /><b>By @Model.PollOwnerName</b></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-11 col-md-offset-1">
        <div class="panel panel-default" style="background-color: lightgrey; border-radius: 1em 1em;">
            <div class="panel-body">
                <p>@Model.Name</p>
            </div>
        </div>
    </div>
</div>

<form action="ChoiceDetail" method="post" class="col-md-11 col-md-offset-1">
    @Html.HiddenFor(it => it.Id)
    @Html.HiddenFor(it => it.Name)
    @Html.HiddenFor(it => it.PollCreateDate)
    @Html.HiddenFor(it => it.PollName)
    @Html.HiddenFor(it => it.PollOwnerName)
    @Html.HiddenFor(it => it.PollRefId)

    <div class="radio">
        <label>
            @Html.RadioButtonFor(m => m.Rate, 5, new { @name = "optionsRadios", @id = "optionsRadios1", @checked = "checked" })
            <img src="~/Images/star.png" width="25" /> 5
        </label>
    </div>
    <div class="radio">
        <label>
            @Html.RadioButtonFor(m => m.Rate, 4, new { @name = "optionsRadios", @id = "optionsRadios1" })
            <img src="~/Images/star.png" width="25" /> 4
        </label>
    </div>
    <div class="radio">
        <label>
            @Html.RadioButtonFor(m => m.Rate, 3, new { @name = "optionsRadios", @id = "optionsRadios1" })
            <img src="~/Images/star.png" width="25" /> 3
        </label>
    </div>
    <div class="radio">
        <label>
            @Html.RadioButtonFor(m => m.Rate, 2, new { @name = "optionsRadios", @id = "optionsRadios1" })
            <img src="~/Images/star.png" width="25" /> 2
        </label>
    </div>
    <div class="radio">
        <label>
            @Html.RadioButtonFor(m => m.Rate, 1, new { @name = "optionsRadios", @id = "optionsRadios1" })
            <img src="~/Images/star.png" width="25" /> 1
        </label>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form>