@model  HackathonHoliday.Models.PollInformation

@{
    ViewBag.Title = "Poll Detail";
}

<div class="row">
    <div class="col-md-11 col-md-offset-1">
        <div class="panel panel-default" style="background-color: lightgrey; border-radius: 1em 1em;">
            <div class="panel-body">
                <div class="text-left col-md-6">
                    <p style="font-size: 30px">@Model.Name</p>
                </div>
                <div class="text-right col-md-6">
                    <p>@string.Format("{0:dd.MM.yy}", Model.CreateDate)<br /><b>By @Model.OwnerName</b></p>
                </div>
            </div>
        </div>
    </div>
</div>

@foreach (var item in Model.Choices)
{
    <div class="row">
        <div class="col-md-1">
            <span style="font-size: 24px; color:grey; vertical-align: middle">5</span>
            <img src="~/Images/starvoted.png" />
        </div>
        <div class="col-md-10">
            <div class="panel panel-default" style="background-color: lightgrey; border-radius: 1em 1em;">
                <div class="panel-body">
                    <p>@item.Name</p>
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <a href="@Url.Action(" ChoiceDetail", "Home", new { choiceid=item.Id })" class="btn btn-success">
                <img src="~/Images/starvoted.png" />
            </a>
        </div>
    </div>
}

<form action="@Url.Action("CreateChoice","Home")" method="post" class="form-inline text-right">
    @Html.HiddenFor(it => it.Id)
    <div class="form-group">
        <input type="text" class="form-control" id="choicename" name="choicename" placeholder="New Choice" required style="background-color: #eaeaea; border: unset; width: 400px">
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
